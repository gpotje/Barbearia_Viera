<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:background="@color/colorAccent"

    android:orientation="vertical"
    tools:context=".Usuario.PerfilUsuario">
    
    

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
        android:orientation="vertical">
       
       <RelativeLayout

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginRight="20dp"
           android:layout_marginLeft="20dp">

           <TextView
               android:id="@+id/tusuario"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="left"
               android:text="Perfil Usuario"
               android:textSize="30sp" />


           <TextView
               android:id="@+id/tNome"
               android:layout_below="@id/tusuario"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="TextView"
               android:textSize="24sp" />

           <ImageView
               android:layout_width="68dp"
               android:layout_height="75dp"
               android:layout_alignParentRight="true"
               android:layout_marginRight="-10dp"
               android:foregroundGravity="center"
               android:src="@drawable/bar" />


       </RelativeLayout>


       <GridLayout
           android:columnCount="2"
           android:rowCount="3"
           android:alignmentMode="alignMargins"
           android:columnOrderPreserved="false"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           >

           <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"

                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/IAgenda"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/bookmark" />

                    <TextView
                        android:id="@+id/textView15"
                        android:textColor="#000"
                        android:layout_marginTop="12dp"
                        android:text="Agendar"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                </LinearLayout>





            </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               app:cardElevation="6dp"
               app:cardCornerRadius="12dp"
               android:layout_margin="12dp"

               >
               <LinearLayout
                   android:orientation="vertical"
                   android:padding="16dp"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <ImageView
                       android:id="@+id/IDadosUsuarios"
                       android:src="@drawable/contact"
                       android:layout_gravity="center"
                       android:layout_width="80dp"
                       android:layout_height="80dp"/>

                   <TextView
                       android:id="@+id/textView133"
                       android:layout_marginTop="12dp"
                       android:layout_gravity="center"
                       android:textColor="#000"
                       android:text="Dados Usua"
                       android:textSize="18sp"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content" />

               </LinearLayout>






           </android.support.v7.widget.CardView>



       </GridLayout>

       <GridLayout
           android:columnCount="2"
           android:rowCount="3"
           android:alignmentMode="alignMargins"
           android:columnOrderPreserved="false"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           >

           <android.support.v7.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               app:cardElevation="6dp"
               app:cardCornerRadius="12dp"
               android:layout_margin="12dp"

               >
               <LinearLayout
                   android:orientation="vertical"
                   android:padding="16dp"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <ImageView
                       android:id="@+id/IEquip"
                       android:src="@drawable/group"
                       android:layout_width="80dp"
                       android:layout_height="80dp"/>

                   <TextView
                       android:id="@+id/textView1"
                       android:textColor="#000"
                       android:layout_marginTop="12dp"
                       android:text="Equipe"
                       android:textSize="18sp"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content" />

               </LinearLayout>





           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               app:cardElevation="6dp"
               app:cardCornerRadius="12dp"
               android:layout_margin="12dp"

               >
               <LinearLayout
                   android:orientation="vertical"
                   android:padding="16dp"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <ImageView
                       android:id="@+id/IServicos"
                       android:src="@drawable/servicos"
                       android:layout_gravity="center"
                       android:layout_width="80dp"
                       android:layout_height="80dp"/>

                   <TextView
                       android:id="@+id/textView17"
                       android:layout_marginTop="12dp"
                       android:textColor="#000"
                       android:text="Serviços"
                       android:layout_gravity="center"
                       android:textSize="18sp"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content" />

               </LinearLayout>







           </android.support.v7.widget.CardView>



       </GridLayout>
       <GridLayout
           android:columnCount="2"
           android:rowCount="3"
           android:alignmentMode="alignMargins"
           android:columnOrderPreserved="false"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           >

           <android.support.v7.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               app:cardElevation="6dp"
               app:cardCornerRadius="12dp"
               android:layout_margin="12dp"

               >
               <LinearLayout
                   android:orientation="vertical"
                   android:padding="16dp"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <ImageView
                       android:id="@+id/ILocalizacao"
                       android:src="@drawable/placeholder"
                       android:layout_width="80dp"
                       android:layout_height="80dp"/>

                   <TextView
                       android:id="@+id/textView19"
                       android:textColor="#000"
                       android:layout_marginTop="12dp"
                       android:text="Localização"
                       android:textSize="18sp"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content" />

               </LinearLayout>





           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               app:cardElevation="6dp"
               app:cardCornerRadius="12dp"
               android:layout_margin="10dp"

               >
               <LinearLayout
                   android:orientation="vertical"
                   android:padding="16dp"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <ImageView
                       android:id="@+id/Isair"
                       android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:layout_gravity="center"
                       android:src="@drawable/exit" />

                   <TextView
                       android:id="@+id/textView18"
                       android:layout_marginTop="12dp"
                       android:textColor="#000"
                       android:layout_gravity="center"
                       android:text="Sair"
                       android:textSize="18sp"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content" />

               </LinearLayout>






           </android.support.v7.widget.CardView>



       </GridLayout>




   </LinearLayout>

</ScrollView>